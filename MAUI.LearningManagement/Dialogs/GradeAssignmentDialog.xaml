<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.LearningManagement.Dialogs.GradeAssignmentDialog"
             Title="Grade Assignment"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout Padding="10">
        <Label
            Text="Grade Assignment"
            VerticalOptions="Center"
            HorizontalOptions="Center" />

        <Label Text="Assignment" />
        <Label Text="{Binding AssignmentName}" />

        <Label Text="Student" />
        <Label Text="{Binding StudentName}" />

        <Label Text="Content" />
        <Label Text="{Binding Content}" />

        <Label Text="Grade" />
        <Entry Placeholder="Grade" Text="{Binding Grade}" />

        <Button Text="Save" Clicked="SaveClicked" />
        <Button Text="Cancel" Clicked="CancelClicked" />
    </VerticalStackLayout>
</ContentPage>