<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.LearningManagement.Views.InstructorView"
             Title="InstructorView"
             NavigatedTo="ContentPage_NavigatedTo"
             >


    <VerticalStackLayout Spacing="10">
        <Label Text="Student List" VerticalOptions="Center" HorizontalOptions="Center"/>
        <ListView
            ItemsSource="{Binding Students}"
            SelectedItem="{Binding SelectedStudent}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Add Student" Clicked="AddStudentClicked" />
        <Button Text="Remove Student" Clicked="RemoveStudentClicked" />
        <Button Text="Go Back Home" Clicked="GoBackClicked" />
    </VerticalStackLayout>

</ContentPage>


            

