<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.LearningManagement.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    Text="Welcome to Learning Management"
                    FontSize="Title"
                    Grid.Column="0"
                    HorizontalOptions="Start" />
                <Button
                    Text="I am a student"
                    Grid.Column="0" 
                    Clicked="StudentClicked" />
                <Button
                    Text="I am an instructor"
                    Grid.Column="1"
                    Clicked = "InstructorClicked" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
