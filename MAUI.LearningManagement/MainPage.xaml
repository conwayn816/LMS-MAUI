<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.LearningManagement.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
                <Label
                    Text="Welcome to the Learning Management System"
                    FontSize="Title"
                    VerticalOptions="Center"
                    HorizontalOptions="Center" />
            <Grid>
                <Grid.ColumnDefinitions Padding="10">
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    Text="I am a student"
                    Grid.Column="0" 
                    Clicked="StudentClicked"
                    Margin="0,0,10,0" />
                <Button
                    Text="I am an instructor"
                    Grid.Column="1"
                    Clicked = "InstructorClicked" 
                    Margin="10,0,0,0" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
